				<pathelement path="F:/eclipse-3.1/plugins/org.apache.ant_1.6.5/lib/ant-trax.jar"/>
				<pathelement path="F:/eclipse-3.1/plugins/org.apache.ant_1.6.5/lib/ant-vaj.jar"/>
				<pathelement path="F:/eclipse-3.1/plugins/org.apache.ant_1.6.5/lib/ant-weblogic.jar"/>
