			<src path="src/"			/>
			</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/jikespg.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*,null"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/${jikespg.jar.name}" basedir="${temp.folder}/jikespg.jar.bin"/>
		<delete dir="${temp.folder}/jikespg.jar.bin"/>
	</target>

	<target name="jikespgsrc.zip" depends="init" unless="jikespgsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/jikespgsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: org.jikespg.uide.">
		<available property="jikespg.jar" file="${build.result.folder}/${jikespg.jar.name}"/>
		<antcall target="jikespg.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="jikespgsrc.zip" file="${build.result.folder}/jikespgsrc.zip"/>
		<antcall target="jikespgsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.jikespg.uide_1.0.1"/>
		<copy todir="${destination.temp.folder}/org.jikespg.uide_1.0.1" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="${jikespg.jar.name}"			/>
		</copy>
		<copy todir="${destination.temp.folder}/org.jikespg.uide_1.0.1" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,${jikespg.jar.name},lpg.exe,icons/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.jikespg.uide_1.0.1"/>
		<copy file="${build.result.folder}/jikespgsrc.zip" todir="${destination.temp.folder}/org.jikespg.uide_1.0.1" failonerror="false" overwrite="false"/>
		<copy todir="${destination.temp.folder}/org.jikespg.uide_1.0.1" failonerror="false" overwrite="false">
			<fileset dir="${basedir}" includes="icons/,lpg.exe,plugin.xml,src/,build.properties,.project,.cvsignore,.classpath"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.jikespg.uide_1.0.1"/>
		<copy file="${temp.folder}/jikespg.jar.bin.log" todir="${destination.temp.folder}/org.jikespg.uide_1.0.1" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.jikespg.uide of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/${jikespg.jar.name}"/>
		<delete file="${build.result.folder}/jikespgsrc.zip"/>
		<delete file="${plugin.destination}/org.jikespg.uide_1.0.1.jar"/>
		<delete file="${plugin.destination}/org.jikespg.uide_1.0.1.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="e:/rmf/eclipse/workspaces/safari/org.jikespg.uide" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.jikespg.uide.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip destfile="${plugin.destination}/org.jikespg.uide_1.0.1.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
